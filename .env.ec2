# Backend .env configuration for EC2 deployment
# Copy this to your EC2 instance at: /home/ubuntu/scholarship-portal/scholarship-backend/.env

# Django Core Settings
SECRET_KEY=your-generated-secret-key-here
DEBUG=False
ALLOWED_HOSTS=api.scholarscanner.com,scholarscanner.com,www.scholarscanner.com,15.206.225.71,localhost,127.0.0.1

# Database (SQLite by default, uncomment for PostgreSQL)
# DATABASE_URL=postgres://user:password@localhost:5432/scholarships

# CORS - Allow both GitHub Pages and custom domain
CORS_ALLOWED_ORIGINS=https://scholarscanner.com,https://www.scholarscanner.com,https://nabin216.github.io,http://localhost:3000,http://127.0.0.1:3000

# CSRF Protection
CSRF_TRUSTED_ORIGINS=https://scholarscanner.com,https://www.scholarscanner.com,https://nabin216.github.io,https://api.scholarscanner.com

# Frontend URL
FRONTEND_URL=https://scholarscanner.com

# Security Settings (HTTPS is enabled with custom domain)
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_PROXY_SSL_HEADER=HTTP_X_FORWARDED_PROTO,https

# JWT Settings
JWT_ACCESS_TOKEN_LIFETIME=60
JWT_REFRESH_TOKEN_LIFETIME=10080
JWT_SECRET_KEY=your-jwt-secret-key-here

# AWS SES Email Settings (Optional)
AWS_SES_REGION=eu-north-1
AWS_SES_FROM_EMAIL=noreply@scholarscanner.com
# AWS_SES_SMTP_USERNAME=your-smtp-username
# AWS_SES_SMTP_PASSWORD=your-smtp-password
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key

# Throttling (Optional - adjust for production)
THROTTLE_RATE_ANON=1000/hour
THROTTLE_RATE_USER=10000/day
THROTTLE_RATE_AUTH=30/minute
THROTTLE_RATE_LOGIN=30/minute
THROTTLE_RATE_REGISTRATION=50/day
THROTTLE_RATE_EMAIL_VERIFICATION=20/hour
