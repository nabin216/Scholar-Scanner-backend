# Django Settings
SECRET_KEY=your_super_secure_production_secret_key_here_at_least_50_characters_long
DEBUG=False
ALLOWED_HOSTS=your-api-domain.com,localhost,127.0.0.1

# Database Settings (for production with PostgreSQL)
# DATABASE_URL=postgresql://username:password@host:port/database_name

# AWS SES Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_id_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here
AWS_SES_REGION=eu-north-1
AWS_SES_FROM_EMAIL=support@yourdomain.com

# CORS and Frontend Settings
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
FRONTEND_URL=https://yourdomain.com

# JWT Settings
JWT_SECRET_KEY=your_jwt_secret_key_here_different_from_django_secret
JWT_ACCESS_TOKEN_LIFETIME=60  # In minutes
JWT_REFRESH_TOKEN_LIFETIME=1440  # In minutes (24 hours)

# Security Headers (Production)
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_HSTS_SECONDS=31536000  # 1 year
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
X_FRAME_OPTIONS=DENY

# Rate Limiting (Production Values)
THROTTLE_RATE_ANON=500/hour
THROTTLE_RATE_USER=5000/day
THROTTLE_RATE_AUTH=20/minute
THROTTLE_RATE_LOGIN=10/minute
THROTTLE_RATE_REGISTRATION=20/day
THROTTLE_RATE_EMAIL_VERIFICATION=30/hour

# Email Verification
EMAIL_OTP_EXPIRY_MINUTES=10
